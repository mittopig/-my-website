            color: rgba(255, 255, 255, 0.3);
            font-size: 1.2em;
            text-align: center;
            pointer-events: none;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.6; }
