<body>
    <canvas id="canvas"></canvas>
    
    <div class="controls">
        <h2>âš¡ Particle Controls</h2>
        
        <div class="control-group">
            <label>Mode:</label>
            <select id="modeSelect" onchange="changeMode()">
                <option value="attract">Attract</option>
                <option value="repel">Repel</option>
                <option value="orbit">Orbit</option>
                <option value="explode">Explode</option>
                <option value="wave">Wave</option>
            </select>
        </div>
        
        <div class="control-group">
            <label>Particle Count: <span id="countValue">300</span></label>
            <input type="range" id="particleCount" min="100" max="2000" value="300" step="100" oninput="updateParticleCount(this.value)">
        </div>
        
        <div class="control-group">
            <label>Speed: <span id="speedValue">1.0</span></label>
            <input type="range" id="speedSlider" min="0.1" max="3" value="1" step="0.1" oninput="updateSpeed(this.value)">
        </div>
        
        <button onclick="resetParticles()">ðŸ”„ Reset</button>
        <button onclick="toggleTrails()">âœ¨ Toggle Trails</button>
    </div>

    <div class="stats">
        <div class="stat-item">FPS: <span class="stat-value" id="fps">60</span></div>
        <div class="stat-item">Particles: <span class="stat-value" id="particleNum">300</span></div>
        <div class="stat-item">Mode: <span class="stat-value" id="currentMode">Attract</span></div>
    </div>

    <div class="info" id="info">
        Move your mouse to interact with particles âœ¨
    </div>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        let particles = [];
        let particleCount = 300;
        let mouse = { x: canvas.width / 2, y: canvas.height / 2 };
        let mode = 'attract';
        let speedMultiplier = 1;
        let showTrails = false;
        let frameCount = 0;
        let lastTime = performance.now();

        class Particle {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.vx = (Math.random() - 0.5) * 2;
                this.vy = (Math.random() - 0.5) * 2;
                this.radius = Math.random() * 2 + 1;
                this.hue = Math.random() * 360;
                this.opacity = Math.random() * 0.5 + 0.5;
            }

            update() {
                let dx = mouse.x - this.x;
                let dy = mouse.y - this.y;
                let distance = Math.sqrt(dx * dx + dy * dy);
                let angle = Math.atan2(dy, dx);

                switch(mode) {
                    case 'attract':
                        if (distance > 50) {
                            this.vx += Math.cos(angle) * 0.1 * speedMultiplier;
                            this.vy += Math.sin(angle) * 0.1 * speedMultiplier;
                        }
                        break;
                    
                    case 'repel':
                        if (distance < 200) {
                            this.vx -= Math.cos(angle) * 0.3 * speedMultiplier;
                            this.vy -= Math.sin(angle) * 0.3 * speedMultiplier;
                        }
                        break;
                    
                    case 'orbit':
                        if (distance < 300 && distance > 50) {
                            this.vx += Math.cos(angle + Math.PI / 2) * 0.15 * speedMultiplier;
                            this.vy += Math.sin(angle + Math.PI / 2) * 0.15 * speedMultiplier;
                        }
                        break;
                    
                    case 'explode':
                        if (distance < 150) {
                            let force = (150 - distance) / 150;
                            this.vx += Math.cos(angle) * force * 5 * speedMultiplier;
                            this.vy += Math.sin(angle) * force * 5 * speedMultiplier;
                        }
                        break;
                    
                    case 'wave':
                        this.vx += Math.sin(this.y / 50 + frameCount / 20) * 0.2 * speedMultiplier;
                        this.vy += Math.cos(this.x / 50 + frameCount / 20) * 0.2 * speedMultiplier;
                        break;
                }

                // Apply friction
                this.vx *= 0.95;
                this.vy *= 0.95;

                // Update position
                this.x += this.vx;
                this.y += this.vy;

                // Wrap around edges
                if (this.x < 0) this.x = canvas.width;
                if (this.x > canvas.width) this.x = 0;
                if (this.y < 0) this.y = canvas.height;
                if (this.y > canvas.height) this.y = 0;

                // Update color based on speed
                let speed = Math.sqrt(this.vx * this.vx + this.vy * this.vy);
                this.hue = (this.hue + speed * 2) % 360;
            }

            draw() {
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fillStyle = `hsla(${this.hue}, 100%, 60%, ${this.opacity})`;
                ctx.fill();
            }
        }

        function initParticles() {
            particles = [];
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle());
            }
        }

        function animate() {
            if (!showTrails) {
                ctx.fillStyle = 'rgba(10, 10, 10, 0.2)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
            } else {
                ctx.fillStyle = 'rgba(10, 10, 10, 0.05)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
            }

            // Batch update and draw
            for (let i = 0; i < particles.length; i++) {
                particles[i].update();
                particles[i].draw();
            }

            // Draw connections only for a subset of particles to improve performance
            if (mode === 'attract' || mode === 'orbit') {
                const connectionLimit = Math.min(particles.length, 200); // Limit connections
                for (let i = 0; i < connectionLimit; i += 2) { // Check every other particle
                    const p1 = particles[i];
                    for (let j = i + 2; j < connectionLimit; j += 2) {
                        const p2 = particles[j];
                        let dx = p1.x - p2.x;
                        let dy = p1.y - p2.y;
                        let distSquared = dx * dx + dy * dy; // Avoid sqrt for performance
                        
                        if (distSquared < 10000) { // 100 * 100
                            let distance = Math.sqrt(distSquared);
                            ctx.beginPath();
                            ctx.strokeStyle = `rgba(0, 255, 136, ${(1 - distance / 100) * 0.2})`;
                            ctx.lineWidth = 0.5;
                            ctx.moveTo(p1.x, p1.y);
                            ctx.lineTo(p2.x, p2.y);
                            ctx.stroke();
                        }
                    }
                }
            }

            // Update FPS
            frameCount++;
            const currentTime = performance.now();
            if (currentTime - lastTime >= 1000) {
                document.getElementById('fps').textContent = frameCount;
                frameCount = 0;
                lastTime = currentTime;
            }

            requestAnimationFrame(animate);
        }

        function changeMode() {
            mode = document.getElementById('modeSelect').value;
            document.getElementById('currentMode').textContent = mode.charAt(0).toUpperCase() + mode.slice(1);
        }

        function updateParticleCount(value) {
            particleCount = parseInt(value);
            document.getElementById('countValue').textContent = value;
            document.getElementById('particleNum').textContent = value;
            initParticles();
        }

        function updateSpeed(value) {
            speedMultiplier = parseFloat(value);
            document.getElementById('speedValue').textContent = value;
        }

        function resetParticles() {
            initParticles();
        }

        function toggleTrails() {
            showTrails = !showTrails;
        }

        canvas.addEventListener('mousemove', (e) => {
            mouse.x = e.clientX;
            mouse.y = e.clientY;
            document.getElementById('info').style.opacity = '0';
        });

        canvas.addEventListener('click', (e) => {
            // Add explosion effect on click
            for (let i = 0; i < 20; i++) {
                let particle = new Particle();
                particle.x = e.clientX;
                particle.y = e.clientY;
                particle.vx = (Math.random() - 0.5) * 10;
                particle.vy = (Math.random() - 0.5) * 10;
                particles.push(particle);
            }
            setTimeout(() => {
                particles.splice(-20, 20);
            }, 2000);
        });

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        initParticles();
        animate();
    </script>
</body>
</html>
